{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [ "airbnb", "plugin:prettier/recommended" ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-param-reassign": ["error", { "props": false }],
        "react/jsx-filename-extension": [1, {"extensions": [".js", ".jsx"]}],
        "prettier/prettier": [
            "error",
            {
              "endOfLine": "auto"
            }
          ]
    }
}
